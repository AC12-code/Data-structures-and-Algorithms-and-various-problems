"""
# Definition for a Node.
class Node:
    def __init__(self, val: int = 0, left: 'Node' = None, right: 'Node' = None, next: 'Node' = None):
        self.val = val
        self.left = left
        self.right = right
        self.next = next
"""

class Solution:
    def connect(self, root: 'Node') -> 'Node':
        if not root:return
        q=deque([root])
        while q:
            rightNode=None
            
            for i in range(len(q)):
                c=q.popleft()
                rightNode,c.next=c,rightNode
                if c.right:
                    q.append(c.right)
                if c.left:
                    q.append(c.left)
        return root
